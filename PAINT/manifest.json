{
    "name": "Paint",
    "version": "1.0.0",
    "description": "helps you plan your project goals, budgeting, an time spent working on project",
    "manifest_version": 3,
    "author": "Abstergo2003",
    "action":{
        "default_popup": "popup.html",
        "default_title": "Time on this site",
        "default_icon": "icons/icon.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "declarativeNetRequest", 
        "declarativeNetRequestWithHostAccess", 
        "declarativeNetRequestFeedback",
        "scripting",
        "activeTab"
    ],
    "storage": ["sync", "local"],
    "background": {
        "service_worker": "install.js"
    },
    "icons": {
        "16": "icons/icon.png",
        "32": "icons/icon.png",
        "48": "icons/icon.png",
        "128":"icons/icon.png"
    }
}